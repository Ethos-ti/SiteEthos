{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "hacklabr/banner-with-image",
    "title": "Banner with image",
    "description": "A banner with image and text side-by-side",
    "category": "text",
    "icon": "align-pull-left",
    "supports": {
        "align": ["center", "wide", "full"],
        "color": {
            "background": true,
            "text": true
        },
        "html": false
    },
    "attributes": {
        "align": {
            "type": "string",
            "default": "wide"
        },
        "image": {
            "type": "object",
            "default": {
                "alt": "",
                "url": ""
            }
        },
        "style": {
            "type": "object",
            "default": {
                "color": {
                    "background": "var(--wp--preset--color--high-light)",
                    "text": "var(--wp--preset--color--low-pure)"
                }
            }
        }
    },
    "textdomain": "hacklabr",
    "editorScript": ["file:../../../dist/blocks/banner-with-image/editor.js"],
    "style": ["file:../../../dist/blocks/banner-with-image/style.css"]
}
